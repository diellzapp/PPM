<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <!-- Titulli i aktivitetit -->
    <TextView
        android:id="@+id/offersTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ofertat e Ditës"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"/>

    <!-- Lista e ofertave -->
    <ListView
        android:id="@+id/offersListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Butoni për të kthyer në ekranin kryesor -->
    <Button
        android:id="@+id/buttonBackHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kthehu në Home"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#16A085"
        android:textColor="#ffffff"
        android:padding="10dp"/>
</LinearLayout>
